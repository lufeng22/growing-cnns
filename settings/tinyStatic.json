{
    "growing": false,

    "initialChannels": 8,
    "numSections": 2,
    "initialNumNodes": 2,

    "growthSteps": 1,
    "growthMode": "expandEdge",
    "numConvToAdd": 1,
    "itemsToExpand": "youngest",
    "join": {
	    "type": "uniform",
    	    "preserve": 0.95
    },
    "stopping": {
	    "type": "lossConvergence",
	    "testWindow": 2,
	    "maxEpochs": 1
    },

    "batchSize": 256,
    "initialLearningRate": 0.01,
    "momentum": 0.9,
    "weightDecay": 1e-4,
    "batchNorm": true,

    "lrDecayStep": 5,
    "lrDecayRatio": 0.5
}
